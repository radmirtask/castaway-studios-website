---
import Layout from '../../layouts/Layout.astro';
import './careers.css';
---

<Layout title="Careers â€” Castaway Studios">
  <main class="careers-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <div class="hero__text">
          <p class="hero__description">We make games with love and passion</p>
          <a href="#positions" class="hero__cta">View Open Positions</a>
        </div>
        <div class="hero__pirate">
          <img src="/careers/pirate_saying_pc.png" alt="Pirate with speech bubble" class="hero__pirate-image" />
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="benefits">
      <div class="benefits__container">
        <h2 class="benefits__title">WHY YOU WILL<br>LOVE OUR TEAM?</h2>
        
        <div class="benefits__cards">
          <div class="benefits__card benefits__card--yellow">
            <div class="benefits__card-inner">
              <h3 class="benefits__card-title">FLEXIBLE<br>HOURS</h3>
            </div>
            <p class="benefits__card-description">Work when you're most creative. We believe great games come from great work-life balance.</p>
          </div>
          
          <div class="benefits__card benefits__card--white">
            <div class="benefits__card-inner">
              <h3 class="benefits__card-title">CREATIVE<br>FREEDOM</h3>
            </div>
            <p class="benefits__card-description">Your ideas matter. We encourage bold thinking and innovative solutions in every project.</p>
          </div>
          
          <div class="benefits__card benefits__card--blue">
            <div class="benefits__card-inner">
              <h3 class="benefits__card-title">GROWTH &<br>LEARNING</h3>
            </div>
            <p class="benefits__card-description">Level up your skills with mentorship, training, and access to cutting-edge game development tools.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Hiring Section -->
    <section class="hiring" id="positions">
      <div class="hiring__container">
        <h2 class="hiring__title">WE ARE HIRING</h2>
        
        <div class="hiring__cards">
          <div class="hiring__card">
            <h3 class="hiring__card-title">Unity Developer</h3>
            <p class="hiring__card-category">Programming</p>
            <div class="hiring__card-details">
              <p class="hiring__card-type">Remote/Hybrid</p>
              <p class="hiring__card-time">Full Time</p>
            </div>
            <a href="/contactUs?position=unity-developer" class="hiring__card-button">Apply</a>
          </div>
          
          <div class="hiring__card">
            <h3 class="hiring__card-title">3D Environment Artist</h3>
            <p class="hiring__card-category">Art</p>
            <div class="hiring__card-details">
              <p class="hiring__card-type">Remote/Hybrid</p>
              <p class="hiring__card-time">Full Time</p>
            </div>
            <a href="/contactUs?position=3d-environment-artist" class="hiring__card-button">Apply</a>
          </div>
          
          <div class="hiring__card">
            <h3 class="hiring__card-title">Game Designer</h3>
            <p class="hiring__card-category">Design</p>
            <div class="hiring__card-details">
              <p class="hiring__card-type">Remote/Hybrid</p>
              <p class="hiring__card-time">Full Time</p>
            </div>
            <a href="/contactUs?position=game-designer" class="hiring__card-button">Apply</a>
          </div>
          
          <div class="hiring__card">
            <h3 class="hiring__card-title">UI/UX Designer</h3>
            <p class="hiring__card-category">Design</p>
            <div class="hiring__card-details">
              <p class="hiring__card-type">Remote/Hybrid</p>
              <p class="hiring__card-time">Part Time</p>
            </div>
            <a href="/contactUs?position=ui-ux-designer" class="hiring__card-button">Apply</a>
          </div>
          
          <div class="hiring__card">
            <h3 class="hiring__card-title">QA Tester</h3>
            <p class="hiring__card-category">Quality Assurance</p>
            <div class="hiring__card-details">
              <p class="hiring__card-type">Remote</p>
              <p class="hiring__card-time">Contract</p>
            </div>
            <a href="/contactUs?position=qa-tester" class="hiring__card-button">Apply</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>