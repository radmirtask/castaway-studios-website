---
import Layout from '../../layouts/Layout.astro';
import './contact.css';
---

<Layout title="Contact Us â€” Castaway Studios">
  <main class="contact-page">
    <section class="contact-hero">
      <div class="contact-hero__content">
        <h1 class="contact-hero__title">Get In Touch</h1>
        <p class="contact-hero__description">
          Ready to discuss your next project or have questions about our games? We'd love to hear from you.
        </p>
      </div>
    </section>

    <section class="contact-form-section">
      <div class="contact-container">
        <div class="contact-info">
          <h2 class="contact-info__title">Let's Connect</h2>
          <p class="contact-info__description">
            Whether you're interested in partnerships, have feedback about our games, or just want to say hello, drop us a message below.
          </p>
          <div class="contact-details">
            <div class="contact-detail">
              <h3>Email</h3>
              <p>support@castaway.studio</p>
            </div>
            <div class="contact-detail">
              <h3>Response Time</h3>
              <p>We typically respond within 24 hours</p>
            </div>
          </div>
        </div>

        <form class="contact-form" action="#" method="POST">
          <div class="form-group">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" id="name" name="name" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" id="email" name="email" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <select id="subject" name="subject" class="form-input" required>
              <option value="">Select a topic...</option>
              <option value="partnership">Partnership Inquiry</option>
              <option value="support">Game Support</option>
              <option value="feedback">Feedback</option>
              <option value="press">Press Inquiry</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" class="form-input form-textarea" rows="6" placeholder="Tell us more about your inquiry..." required></textarea>
          </div>

          <button type="submit" class="form-submit">
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout> 