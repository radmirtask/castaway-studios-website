---
export const prerender = true;
import Layout from '../../layouts/Layout.astro';
import './contact.css';
---

<Layout title="Contact Us — Castaway Studios">
  <main class="contact-page">
    <section class="contact-hero">
      <div class="contact-hero__content">
        <h1 class="contact-hero__title">Get In Touch</h1>
        <p class="contact-hero__description">
          Ready to discuss your next project or have questions about our games? We'd love to hear from you.
        </p>
      </div>
    </section>

    <section class="contact-form-section">
      <div class="contact-container">
        <div class="contact-info">
          <h2 class="contact-info__title">Let's Connect</h2>
          <p class="contact-info__description">
            Whether you're interested in partnerships, have feedback about our games, or just want to say hello, drop us a message below.
          </p>
          <div class="contact-details">
            <div class="contact-detail">
              <h3>Email</h3>
              <p>support@castaway.studio</p>
            </div>
            <div class="contact-detail">
              <h3>Response Time</h3>
              <p>We typically respond within 24 hours</p>
            </div>
          </div>
        </div>

        <form
            name="contact"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="contact-form"
          >
          <input type="hidden" name="form-name" value="contact" />
          <p class="sr-only">
            <label>Don’t fill this if you’re human: 
              <input type="hidden" name="bot-field" />
            </label>
          </p>
          <div class="form-group">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" id="name" name="name" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" id="email" name="email" class="form-input" required>
          </div>

          <div class="form-group">
            <label for="subject" class="form-label">Subject</label>
            <select id="subject" name="subject" class="form-input" required>
              <option value="">Select a topic...</option>
              <option value="job-application">Job Application</option>
              <option value="partnership">Partnership Inquiry</option>
              <option value="support">Game Support</option>
              <option value="feedback">Feedback</option>
              <option value="press">Press Inquiry</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" class="form-input form-textarea" rows="6" placeholder="Tell us more about your inquiry..." required></textarea>
          </div>

          <button type="submit" class="form-submit">
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const urlParams = new URLSearchParams(window.location.search);
      const position = urlParams.get('position');
      
      if (position) {
        // Pre-fill subject with Job Application
        const subjectSelect = document.getElementById('subject') as HTMLSelectElement;
        if (subjectSelect) {
          subjectSelect.value = 'job-application';
        }
        
        // Create position-specific messages
        const positionMessages: Record<string, string> = {
          'intern-unity-developer': 'Hello Castaway Studios team,\n\nI am excited to apply for the Intern Unity Developer position. I have solid programming fundamentals and basic Unity experience, with a passion for mobile game development. I\'m eager to learn by doing and contribute to real mobile game prototypes.\n\nI would love to join your core team and help build the future of mobile gaming while developing my skills in a real production environment.\n\nI am available for part-time remote internship and ready to dive into mobile-native gameplay development.\n\nBest regards,',
          
          'game-designer': 'Hello Castaway Studios team,\n\nI am writing to apply for the Game Designer (Mid-Level) position. I have 2+ years of mobile-focused game design experience with deep understanding of hybrid casual mechanics and gameplay balancing. Your vision of mobile-native gameplay that\'s "fast, fluid, intuitive, and emotionally rewarding" resonates strongly with my design philosophy.\n\nI would love to own and iterate on core design for your mobile titles - from combat mechanics and session flow to economy balance and retention optimization.\n\nI am available for contract or part-time remote work and excited to help design mobile gameplay that truly sticks.\n\nBest regards,',
          
          'animator-vfx-artist': 'Hello Castaway Studios team,\n\nI am interested in applying for the Animator / VFX Artist position. I specialize in creating responsive, optimized animations and VFX that enhance mobile gameplay and UI. I have experience with Unity animation and particle systems, with strong awareness of mobile optimization constraints.\n\nI would love to help bring your mobile gameplay to life and deliver satisfying visual feedback that scales beautifully across devices.\n\nI am available for part-time or freelance remote work and excited to contribute to your mobile-native gaming vision.\n\nBest regards,',
          
          'qa-game-feel-tester': 'Hello Castaway Studios team,\n\nI would like to apply for the QA & Game Feel Tester position. I have strong attention to detail and experience in gameplay testing with a mobile-first mindset. I understand the importance of polishing mobile games and analyzing retention-critical moments.\n\nI would love to help test builds across platforms, identify issues, and elevate the polish across your casual and core mobile projects.\n\nI am available for part-time or contract remote work and excited to help push the quality of mobile-native gameplay.\n\nBest regards,',
          
          'art-director-lead-artist': 'Hello Castaway Studios team,\n\nI am excited to apply for the Art Director / Lead Artist position. I have extensive experience directing stylized mobile and indie games, with a strong portfolio spanning 2D/3D/VFX work. Your approach to mobile-first design and console-quality clarity on mobile devices aligns perfectly with my artistic vision.\n\nI would love to define and oversee the visual identity of your mobile-first projects, guide junior artists, and ensure consistency across environments, UI, and visual effects.\n\nI am available for freelance or full-time work (depending on funding) and ready to help establish the visual future of mobile gaming.\n\nBest regards,',
          
          'vfx-animation-artist': 'Hello Castaway Studios team,\n\nI am writing to apply for the VFX & Animation Artist position. I have strong Unity VFX and animation skills including Shader Graph, Particle Systems, and tools like Spine. I specialize in creating performance-friendly, eye-catching visuals with strong timing and visual clarity optimized for mobile.\n\nI would love to create impactful visuals that enhance moment-to-moment mobile gameplay and directly shape how your games feel to play.\n\nI am available for part-time or freelance remote work and excited to contribute to your mobile-native gaming vision.\n\nBest regards,'
        };
        
        // Pre-fill message based on position
        const messageTextarea = document.getElementById('message') as HTMLTextAreaElement;
        if (messageTextarea && positionMessages[position]) {
          messageTextarea.value = positionMessages[position];
          // Position cursor at the end for easy editing
          messageTextarea.focus();
          messageTextarea.setSelectionRange(messageTextarea.value.length, messageTextarea.value.length);
        }
      }
    });
  </script>
</Layout> 