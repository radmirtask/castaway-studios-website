---
import Layout from '../../layouts/Layout.astro';
import captainSrc from '../../../public/home/hero/Captain_Bootycall.png';
import bgSrc from '../../../public/home/hero/BG.png';
import ctaSrc from '../../../public/home/hero/Business_button.png';
import game1Src from '../../../public/home/games/game1.png';
import game2Src from '../../../public/home/games/game2.png';
import game3Src from '../../../public/home/games/game3.png';
import arrowSrc from '../../../public/home/games/arrow.png';
import rectangleSrc from '../../../public/home/games/rectangle below arrow.png';
import './home.css';
---

<Layout title="Home — Castaway Studios">
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__bg" style={`background-image: url(${bgSrc.src});`}></div>
      
      <!-- Button positioned absolutely to align with background text -->
      <a href="#contact" class="hero__button-link">
        <img 
          src={ctaSrc.src} 
          alt="TALK BUSINESS" 
          class="hero__business-button" 
          draggable="false" 
        />
      </a>
      
      <p class="hero__description">
        Our games are built for grown-ups who refuse to grow up—packed with sharp wit, bold worlds, and just the right amount of trouble.
      </p>
      
      <!-- Pirate character image -->
      <img 
        src={captainSrc.src} 
        alt="Captain Bootycall character" 
        class="hero__pirate-image" 
        draggable="false" 
      />
    </section>
    
    <!-- Game Collection Section -->
    <section class="game-collection">
      <div class="game-collection__container">
        <div class="game-collection__cards">
          <div class="game-card">
            <img src={game1Src.src} alt="Visions of Tomorrow" class="game-card__image" draggable="false"/>
            <h3 class="game-card__title">VISIONS OF TOMORROW</h3>
          </div>
          
          <div class="game-card"> 
            <img src={game2Src.src} alt="Dynozaur Eater" class="game-card__image" draggable="false"/>
            <h3 class="game-card__title">DYNOZAUR EATER</h3>
          </div>
          
          <div class="game-card">
            <img src={game3Src.src} alt="Master of Shitting" class="game-card__image" draggable="false"/>
            <h3 class="game-card__title">MASTER OF SHITTING</h3>
          </div>
        </div>
        
        <div class="game-collection__info">
          <img src={arrowSrc.src} alt="" class="game-collection__arrow" draggable="false"/>
          <div class="game-collection__box">
            <h2 class="game-collection__title">GAME<br/>COLLECTION</h2>
            <p class="game-collection__subtitle">we are cool as fuck, so check<br/>it out on your own!</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Who Are We Section -->
    <section class="about">
      <h2 class="section-title">Who Are We?</h2>
      <p class="about__description">
        <!-- Content from Figma would go here -->
        A studio dedicated to creating fun, engaging games with a pirate twist.
      </p>
      <!-- Additional content based on Figma design -->
    </section>
    
    <!-- Development Path Section -->
    <section class="dev-path">
      <h2 class="section-title">Our Development Path</h2>
      <div class="timeline">
        <!-- Timeline items from Figma -->
        <div class="timeline-item">
          <h3>Concept & Design</h3>
          <!-- Content from Figma -->
        </div>
        <div class="timeline-item">
          <h3>Development</h3>
          <!-- Content from Figma -->
        </div>
        <div class="timeline-item">
          <h3>Testing & Polish</h3>
          <!-- Content from Figma -->
        </div>
        <div class="timeline-item">
          <h3>Launch</h3>
          <!-- Content from Figma -->
        </div>
      </div>
    </section>
    
    <!-- Ready to Create Section -->
    <section class="cta">
      <h2 class="section-title">Ready to Create Something?</h2>
      <a href="#contact" class="cta-button">Get in Touch</a>
    </section>
  </main>
</Layout> 